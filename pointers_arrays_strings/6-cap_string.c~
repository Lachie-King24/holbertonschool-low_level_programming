#include "main.h"

/**
 * cap_string - capitalizes all words in string
 * @s: string
 * Return: string
 */

char *cap_string(char *)
{
    int i = 0;
    char separators[] = " \t\n,;.!?\"(){}";

    while (s[i] != '\0')
    {
        // Capitalize first character of the string
        if (i == 0 && s[i] >= 'a' && s[i] <= 'z')
            s[i] = s[i] - 32;

        // Capitalize after a separator
        else if (s[i] >= 'a' && s[i] <= 'z')
        {
            int j = 0;
            while (separators[j] != '\0')
            {
                if (s[i - 1] == separators[j])
                {
                    s[i] = s[i] - 32;
                    break;
                }
                j++;
            }
        }
        i++;
    }

    return s;
}
